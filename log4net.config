<?xml version="1.0" encoding="utf-8" ?>
<log4net>

  <!-- Ensure the directory exists (log4net won't create nested directories reliably everywhere). -->
  <!-- We'll create it at startup in code. -->

  <appender name="FatalFile" type="log4net.Appender.RollingFileAppender">
    <file value="logs/fatal.json" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maximumFileSize value="10MB" />
    <maxSizeRollBackups value="10" />
    <staticLogFileName value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="FATAL" />
      <levelMax value="FATAL" />
      <acceptOnMatch value="true" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="{&quot;timestamp&quot;:&quot;%date{yyyy-MM-ddTHH:mm:ss.fffK}&quot;,&quot;level&quot;:&quot;%level&quot;,&quot;message&quot;:%message,&quot;exception&quot;:%exception}%newline" />
    </layout>
  </appender>

  <appender name="ErrorFile" type="log4net.Appender.RollingFileAppender">
    <file value="logs/error.json" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maximumFileSize value="10MB" />
    <maxSizeRollBackups value="10" />
    <staticLogFileName value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
      <levelMax value="ERROR" />
      <acceptOnMatch value="true" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="{&quot;timestamp&quot;:&quot;%date{yyyy-MM-ddTHH:mm:ss.fffK}&quot;,&quot;level&quot;:&quot;%level&quot;,&quot;message&quot;:%message,&quot;exception&quot;:%exception}%newline" />
    </layout>
  </appender>

  <appender name="WarnFile" type="log4net.Appender.RollingFileAppender">
    <file value="logs/warn.json" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maximumFileSize value="10MB" />
    <maxSizeRollBackups value="10" />
    <staticLogFileName value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="WARN" />
      <levelMax value="WARN" />
      <acceptOnMatch value="true" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="{&quot;timestamp&quot;:&quot;%date{yyyy-MM-ddTHH:mm:ss.fffK}&quot;,&quot;level&quot;:&quot;%level&quot;,&quot;message&quot;:%message,&quot;exception&quot;:%exception}%newline" />
    </layout>
  </appender>

  <appender name="InfoFile" type="log4net.Appender.RollingFileAppender">
    <file value="logs/info.json" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maximumFileSize value="10MB" />
    <maxSizeRollBackups value="10" />
    <staticLogFileName value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="INFO" />
      <levelMax value="INFO" />
      <acceptOnMatch value="true" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="{&quot;timestamp&quot;:&quot;%date{yyyy-MM-ddTHH:mm:ss.fffK}&quot;,&quot;level&quot;:&quot;%level&quot;,&quot;message&quot;:%message,&quot;exception&quot;:%exception}%newline" />
    </layout>
  </appender>

  <appender name="DebugFile" type="log4net.Appender.RollingFileAppender">
    <file value="logs/debug.json" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maximumFileSize value="10MB" />
    <maxSizeRollBackups value="10" />
    <staticLogFileName value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="DEBUG" />
      <levelMax value="DEBUG" />
      <acceptOnMatch value="true" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="{&quot;timestamp&quot;:&quot;%date{yyyy-MM-ddTHH:mm:ss.fffK}&quot;,&quot;level&quot;:&quot;%level&quot;,&quot;message&quot;:%message,&quot;exception&quot;:%exception}%newline" />
    </layout>
  </appender>

  <!-- log4net does not have a native TRACE level; map TRACE to DEBUG to keep the requested file -->
  <appender name="TraceFile" type="log4net.Appender.RollingFileAppender">
    <file value="logs/trace.json" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maximumFileSize value="10MB" />
    <maxSizeRollBackups value="10" />
    <staticLogFileName value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="DEBUG" />
      <levelMax value="DEBUG" />
      <acceptOnMatch value="true" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="{&quot;timestamp&quot;:&quot;%date{yyyy-MM-ddTHH:mm:ss.fffK}&quot;,&quot;level&quot;:&quot;TRACE&quot;,&quot;message&quot;:%message,&quot;exception&quot;:%exception}%newline" />
    </layout>
  </appender>

  <root>
    <!-- Minimum level emitted. Everything below this is ignored. -->
    <level value="DEBUG" />
    <appender-ref ref="FatalFile" />
    <appender-ref ref="ErrorFile" />
    <appender-ref ref="WarnFile" />
    <appender-ref ref="InfoFile" />
    <appender-ref ref="DebugFile" />
    <appender-ref ref="TraceFile" />
  </root>

</log4net>